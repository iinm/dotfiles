{
  "autoApproval": {
    "defaultAction": "ask",
    "maxApprovals": 50,
    "patterns": [
      {
        "toolName": "exec_command",
        "input": { "command": { "$regex": "^(find|grep)$" } },
        "action": "deny",
        "reason": "Use rg or fd instead"
      },
      {
        "toolName": "exec_command",
        "input": { "command": "fd", "args": { "$has": { "$regex": "^(--unrestricted|-u|--no-ignore|-I|--exec|-x|--exec-batch|-X)(=.+)?$" } } },
        "action": "ask"
      },
      {
        "toolName": "exec_command",
        "input": { "command": "rg", "args": { "$has": { "$regex": "^(--unrestricted|-u|--no-ignore)(=.+)?$" } } },
        "action": "ask"
      },
      {
        "toolName": { "$regex": "^(delegate_to_subagent|report_as_subagent)$" },
        "action": "allow"
      },
      {
        "toolName": "exec_command",
        "input": { "command": { "$regex": "^(echo|ls|cat|head|tail|wc|date|pwd|uname|fd|rg|jq)$" } },
        "action": "allow"
      },
      {
        "toolName": "exec_command",
        "input": { "command": "sed", "args": ["-n", { "$regex": "^\\d+(,\\d+)?(p|l)$" }] },
        "action": "allow"
      },
      {
        "toolName": "exec_command",
        "input": { "command": "awk", "args": [{ "$regex": "^F?NR==\\d+(, *F?NR==-?\\d+)? *\\{print (F?NR[,\" ]*)?\\$0\\}$" }] },
        "action": "allow"
      },
      {
        "toolName": "exec_command",
        "input": { "command": "awk", "args": [{ "$regex": "^F?NR[=<>]+\\d+ *(&& *F?NR[=<>]+-?\\d+)? *\\{print (F?NR[,\" ]*)?\\$0\\}$" }] },
        "action": "allow"
      },
      {
        "toolName": "exec_command",
        "input": { "command": "awk", "args": [{ "$regex": "^F?NR[=<>]+\\d+ *(&& *F?NR[=<>]+-?\\d+)?$" }] },
        "action": "allow"
      },
      {
        "toolName": "exec_command",
        "input": { "command": "git", "args": [{ "$regex": "^(status|diff|log|show|ls-remote|rev-parse)$" }] },
        "action": "allow"
      },
      {
        "toolName": "exec_command",
        "input": { "command": "git", "args": ["branch", "--show-current"] },
        "action": "allow"
      },
      {
        "toolName": "exec_command",
        "input": { "command": "docker", "args": [{ "$regex": "^(ps|logs)$" }] },
        "action": "allow"
      },
      {
        "toolName": "exec_command",
        "input": { "command": "docker", "args": ["compose", { "$regex": "^(ps|logs)$" }] },
        "action": "allow"
      },
      {
        "toolName": "tmux_command",
        "input": { "command": { "$regex": "^(list-sessions|list-windows)$" } },
        "action": "allow"
      },
      {
        "toolName": "exec_command",
        "input": { "command": "gh", "args": ["--version"] },
        "action": "allow"
      },
      {
        "toolName": "exec_command",
        "input": { "command": "gh", "args": ["auth", "status"] },
        "action": "allow"
      },
      {
        "toolName": "exec_command",
        "input": { "command": "gh", "args": [{ "$regex": "^(pr|issue)$" }, { "$regex": "^(view|diff)$" }] },
        "action": "allow"
      },
      {
        "toolName": "exec_command",
        "input": { "command": "gh", "args": ["api", { "$regex": "^repos/[^/]+/[^/]+/pulls/\\d+/comments$" }] },
        "action": "allow"
      },
      {
        "toolName": "exec_command",
        "input": { "command": "gh", "args": ["api", { "$regex": "^repos/[^/]+/[^/]+/pulls/comments/\\d+$" }] },
        "action": "allow"
      }
    ]
  }
}
