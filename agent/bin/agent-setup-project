#!/usr/bin/env bash

set -eu -o pipefail


this_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
app_root="$(cd "$this_dir/.." && pwd)"

help() {
  cat << 'HELP'
Usage: agent-setup-project --metadata-dir <dir>

Initialize an agent metadata directory for storing project-specific resources.

This script:
- Creates a metadata directory at the specified location
- Sets up a symbolic link from .agent to this directory
- Creates the necessary subdirectories (memory/, request-archive/)
- Initializes an empty request.md file for task descriptions
- Adds a .gitignore file to exclude temporary files

The metadata directory stores:
- Task memory files for context persistence across sessions
- Project-wide knowledge base
- Task request descriptions

Example:
  ./bin/agent-setup-project --metadata-dir ~/agent-metadata/my-project
HELP
}

while test "$#" -gt 0; do
  case "$1" in
    --help ) help; exit 0 ;;
    --metadata-dir ) metadata_dir="$2"; shift 2 ;;
    --*    ) echo "error: unknown option $1"; exit 1 ;;
    *      ) break ;;
  esac
done

: "${metadata_dir:?error: --metadata-dir is required}"

source "$app_root/env.sh"

if test -d "$metadata_dir"; then
  echo "error: $metadata_dir already exists" >&2
  exit 1
fi

if test -d "$AGENT_PROJECT_METADATA_DIR"; then
  echo "error: $AGENT_PROJECT_METADATA_DIR already exists" >&2
  exit 1
fi

mkdir -pv "$metadata_dir"
ln -sv "$metadata_dir" "$AGENT_PROJECT_METADATA_DIR"

mkdir -pv "$AGENT_PROJECT_METADATA_DIR"/{memory,request-archive}
touch "$AGENT_PROJECT_METADATA_DIR"/request.md
echo -e "tmp/" > "$AGENT_PROJECT_METADATA_DIR"/.gitignore
