{
  "autoApproval": {
    "patterns": [
      {
        "toolName": "exec_command",
        "input": {
          "command": "npm",
          "args": ["run", { "regex": "^(check|fix)$" }]
        }
      },
      {
        "toolName": { "regex": "^(write_file|patch_file)$" },
        "input": { "filePath": { "regex": "^\\.agent/memory/.+\\.md$" } }
      },
      {
        "toolName": { "regex": "^(write_file|patch_file)$" },
        "input": { "filePath": { "regex": "^src/" } }
      }
    ]
  },
  "sandbox": {
    "command": ".agent/sandbox/run",
    "args": ["--skip-build"],
    "rules": [
      {
        "pattern": {
          "command": "npm",
          "args": ["install"]
        },
        "mode": "sandbox",
        "extraArgs": ["--allow-net", "0.0.0.0/0"]
      }
    ]
  }
}
